load("//build/rules/fuzzing:defs.bzl", "rust_fuzz_test")

filegroup(
    name = "corpus_filegroup",
    srcs = glob([
        "corpus/corpus_0",
        "corpus/**",
    ]),
)

rust_fuzz_test(
    name = "should_not_fail",
    srcs = ["should_not_fail.rs"],
    corpus = glob(
        ["corpus/**/*"],
        allow_empty = False,
    ),
    tags = [
        "external",
        "manual",
    ],
    deps = [
        "@crates//:arbitrary",
        "@crates//:libfuzzer-sys",
    ],
)

rust_fuzz_test(
    name = "buffer_overflow",
    srcs = ["buffer_overflow.rs"],
    corpus = glob(
        ["corpus/**/*"],
        allow_empty = False,
    ),
