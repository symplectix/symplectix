{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate rust-project.json",
      "command": "bazel",
      "args": [
        "run",
        "@rules_rust//tools/rust_analyzer:gen_rust_project",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Build a devcontainer image",
      "command": "bazel",
      "args": [
        "run",
        "//tools/devcontainer:debian_bullseye_slim",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
      },
    },
  ]
}
